<h4>25.  Setting a permission profile.</h4>

<p>
    Updates the group name and modifies, or sets, the permission profile for the group.
</p>

@if (ViewBag.showDoc)
{
    <p><a target="_blank" href="@ViewBag.documentation">Documentation</a> about this example.</p>
}

<p>
    API method used:
    <a target="_blank" href="https://developers.docusign.com/esign-rest-api/reference/UserGroups/Groups/update">Groups::update</a>.
</p>

<p>
    View source file <a target="_blank" href="@ViewBag.source">Eg025PermissionSetUserGroupController.cs</a> on GitHub.
</p>

<form action="" class="eg" method="post" data-busy="form">

    <div class="form-group">

        <label for="permissionProfileId">Permission profile</label>
        @Html.DropDownList(
            "permissionProfileId",
            ViewBag.PermissionProfiles,
            "Select permission profile",
            new { @class = "custom-select", required = "required" })
    </div>
    <div class="form-group">
        <label for="userGroupId">User group</label>
        @Html.DropDownList(
            "userGroupId",
            ViewBag.UserGroups,
            "Select user group",
            new { @class = "custom-select", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>